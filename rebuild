# _dir="${XDG_RUNTIME_DIR:-${TMP:-/tmp}}"
# _tmp="$(mktemp -d "${_dir}/${0##*/}.XXXXXX" 2>/dev/null || true)"

# if [ -d "${_tmp:-}" ]; then
